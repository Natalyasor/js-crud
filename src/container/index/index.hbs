<main class="main">
  <section>
    <div class="form">
      <h1 class="form_title">Створити користувача</h1>
      <form method="POST" action="/user-create">
        <div class="form_content">
          <div class="form_field">
            <label for="email" class="form_label">Email адреса:</label>
            <input type="email" name="email" class="form_input">
          </div>
          <div class="form_field">
            <label for="login" class="form_label">Нікнейм:</label>
            <input type="login" name="login" class="form_input">
          </div>
          <div class="form_field">
            <label for="password" class="form_label"> Пароль:</label>
            <input type="password" name="password" class="form_input">
          </div>
          <button class="form_button">Створити</button>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form_title">Список користувачів</h1>
      <div class="user-list">
        {{#with data.users}}
        {{#if isEmpty}}
        <mark>пустий</mark>
        {{else}}
        <ul>
          {{#each list}}
          <li>{{email}} | {{login}} | {{id}} <a href="/user-delete?id={{id}}">(видалити)</a></li>
          {{/each}}
        </ul>
        {{/if}}
        {{/with}}
      </div>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form_title">Оновити пошту користувача</h1>
      <form method="POST" action="/user-update">
        <div class="form_content">
          <div class="form_field">
            <label for="id" class="form_label">ID:</label>
            <input type="id" name="id" class="form_input">
          </div>
          <div class="form_field">
            <label for="email" class="form_label">Нова email адреса:</label>
            <input type="email" name="email" class="form_input">
          </div>
          <div class="form_field">
            <label for="password" class="form_label"> Пароль:</label>
            <input type="password" name="password" class="form_input">
          </div>
          <button class="form_button">Відправити</button>
        </div>
      </form>
    </div>
  </section>
</main>

<main class="create">
  <section>
    <form method="POST" action="product-create">
      <h1 class="title_create text-primary">Створення товару</h1>
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-primary">Інформація про товар</h1>
          <div class="form_field_1">
            <div class="form_1">
              <label for="name" class="form_label">Назва товару</label>
              <input type="text" name="name" class="form_input">
            </div>
            <div class="form_1">
              <label for="price" class="form_label">ціна</label>
              <input type="text" name="price" class="form_input">
            </div>

          </div>
          <div class="form_1">
            <label for="description" class="form_label">Короткий опис товару</label>
            <input type="text" name="description" class="form_control">
            <div class="form-text">Відображується у картці товару</div>
          </div>
          <button class="btn btn-primary">Створити товар</button>
        </div>
      </div>
    </form>
  </section>

  <section>
    <div class="form">
      <h1 class="product_text">Список створених товарів</h1>
      <div class="product-list">
        {{#with data.products}}
        {{#if isEmpty}}
        <mark>Список товарів пустий</mark>
        {{else}}
        <ul>
          {{#each list}}
          <li>{{name}} | {{price}}</li>
          {{/each}}
        </ul>
        {{/if}}
        {{/with}}
      </div>
    </div>
  </section>

</main>



<main>
  <section>
    <form method="POST" action="product-list">
      <h1 class="text-primary text-center">Список товарів</h1>
      <div class="card_content">
        {{> product-card}}
      </div>
    </form>
  </section>
</main>

